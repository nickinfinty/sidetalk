        <RichTextBox IsReadOnly="True" FontFamily="Segoe UI" FontSize="16" Margin="10,116,10,54" BorderThickness="0" Background="#FF9EAFFF">
            <FlowDocument>
                <Paragraph>
                    <Run Text="This App is created by Nick and George, two students in WEFLS."/>
                    <LineBreak />
                    <Run Text="There's no copyright and trademark here."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="Images/profle.png" Margin="10,10,0,0"/>
        <Label Content="N&amp;G Workgroup" Margin="115,43,-10,0" VerticalAlignment="Top" FontFamily="Segoe UI Semibold" FontSize="20"/>
        <Button Content="OK" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="30" Width="73" Click="Button_Click" BorderBrush="{x:Null}" Background="#FF768EFC"/>

    </Grid>
</Window>
